<!DOCTYPE html>
<html lang="en">
<%- include('./layout/head') %>
<body>
    <%- include('./layout/headerBackend') %>
        
        <% if (userToEdit) { %>

    <section class="formularioEditUser">
        
            <h3 class="formularioEditUser_title">Formulario edición de usuario</h3>
       
        <form action="/users/<%= userToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

            <div class="formulario_contenedorUser">   
                <div class="formulario_contenidoUser">
                    
                    <div class="formEditUser_grid">

                        <div class="formularioUser_item">
                            <label for="name" class="formUser-label">Nombre:</label>
                            <input type="text" 
                            name="name" 
                            class="formUser-input"
                            value="<%= userToEdit.dataValues.firstname%>">
                            <% if (locals.errors && errors.name) { %>
                                <div class="text-danger">
                                    <%= errors.name.msg %>
                                </div>
                            <% } %>
                           
                        </div>

                        <div class="formularioUser_item">
                            <label for="lastname" class="formUser-label">Apellido:</label>
                            <input type="text" 
                            name="lastname" 
                            class="formUser-input"
                            value="<%= userToEdit.dataValues.lastname %>">
                            <% if (locals.errors && errors.lastname) { %>
                                <div class="text-danger">
                                    <%= errors.lastname.msg %>
                                </div>
                            <% } %>
                        </div>

                        <div class="formularioUser_item">
                            <label for="email" class="formUser-label">Email:</label>
                            <input type="text" 
                            name="email" 
                            class="formUser-input"
                            value="<%= userToEdit.dataValues.email %>">
                            <% if (locals.errors && errors.email) { %>
                                <div class="text-danger">
                                    <%= errors.email.msg %>
                                </div>
                            <% } %>
                        </div>

                        <div class="formularioUser_item">
                        <label for="password" class="formUser-label">Contraseña:</label>
                        <input type="password" 
                        name="password" 
                        class="formUser-input" value="<%= userToEdit.dataValues.password %>">
                        <% if (locals.errors && errors.password) { %>
                            <div class="text-danger">
                                <%= errors.password.msg %>
                            </div>
                        <% } %>
                        <input type="hidden" 
                        name="role" 
                        value="<%= userToEdit.dataValues.profile_id %>">
                        </div>
                    </div>
                    
                    

                    <div class="formularioUser_item">
                        <label for="fileImage" class="formUser-label">Foto de perfil:</label>
                        <input type="hidden" name="id" value="<%= userToEdit.id %>"/>
                        <input type="hidden" name="picture" value="<%= userToEdit.dataValues.images %>"/>
                        <input type="file" 
                        id="fileImage"
                        name="fileImage" 
                        value="">
                        <% if (locals.errors && errors.fileImage) { %>
                            <div class="text-danger">
                                <%= errors.fileImage.msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="formulario_edit-buttonUser">
                        <button type="submit" class="buy-now-buttonUser">Actualizar</button>
                        
                    </div>
                </div>
                
            </div>
   
        </form>

    </section>
    <% } %>
<%- include('./layout/head') %>
</body>
</html>
<%- include('./layout/head') %>
</body>
</html>