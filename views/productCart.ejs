<!DOCTYPE html>
<html lang="en">
<%- include('./layout/head') %>
<body>
    <%- include('./layout/header') %>

    <section class="checkOutbanner">
        <div class="banner-info">
          <div class="container-banner">
            <h4>CHECKOUT</h4>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec faucibus maximus vehicula. 
              Sed feugiat, tellus vel tristique posuere, diam</p>
            <ol class="breadcrumb">
              <li><a href="/">HOME</a></li>
              <i class="far fa-arrow-alt-circle-right"></i>
              <li><a href="/login">CHECK OUT</a></li>
            </ol>
          </div>
        </div>
      </section> <!-- Termina SECTION BANNER-->
    
    <div class="cart-container">

        <div class="cart-billing"> 
            <h6>DETALLES DEL USUARIO</h6>
        
            <form>

                <ul class="cart-billing__user">
                    
                    <!-- Name -->
                    <li class="user__info">
                    <label>NOMBRE
                        <input type="text" name="first-name" value="<%= cookies.firstname %>" placeholder="">
                    </label>
                    </li>

                    <!-- LAST NAME -->

                    <li class="user__info">
                    <label>APELLIDO
                        <input type="text" name="last-name" value="<%= cookies.lastname %>" placeholder="">
                    </label>
                    </li>

                    <li class="user__info"> 
                    <!-- COMPANY NAME -->
                    <label>COMPANY NAME
                        <input type="text" name="company" value="" placeholder="">
                    </label>
                    </li>

                    <li class="user__info"> 
                    <!-- ADDRESS -->
                    <label>DIRECCION
                        <input type="text" name="address" value="" placeholder="">
                    </label>
                    </li>

                    <!-- TOWN/CITY -->

                    <li class="user__info">
                    <label>CIUDAD
                        <input type="text" name="town" value="" placeholder="">
                    </label>
                    </li>
                    
                    <!-- COUNTRY -->

                    <li class="user__info">
                    <label>PAIS
                        <input type="text" name="contry-state" value="" placeholder="">
                    </label>
                    </li>
                    
                    <!-- EMAIL ADDRESS -->
                    <li class="user__info">
                    <label>EMAIL
                        <input type="text" name="contry-state" value="<%= cookies.email %>" placeholder="">
                    </label>
                    </li>

                    <!-- PHONE -->
                    <li class="user__info">
                    <label>TELEFONO
                        <input type="text" name="postal-code" value="" placeholder="">
                    </label>
                    </li>
                    
                    <!-- Continue -->
                    
                    <li class="user__info">
                        <label>
                            <a href="/">CONTINUAR COMPRANDO</a>
                        </label>
                    
                    </li>
                    
                </ul>

            </form>
        </div>

        <div class="shopping-cart">

            <h6>TU ORDEN</h6>

            <div class="order-place">
              <div class="order-detail">
                <p>WOOD CHAIR <span>$598 </span></p>
                <p>STOOL <span>$199 </span></p>
                <p>WOOD SPOON <span> $139</span></p>
                
                <!-- SUB TOTAL -->
                <p class="all-total">TOTAL<span> $998</span></p>
            </div>

            <div class="metodoPago">
                <ul>
                    <li>
                        <div class="radio">
                        <input type="radio" name="radio1" id="radio1" value="option1" checked="">
                        <label for="radio1"><span class="metodoPago__texto">DEPOSITO BANCARIO</span></label>
                        </div>
                    
                    </li>
                 
                    <li>
                        <div class="radio">
                        <input type="radio" name="radio1" id="radio3" value="option3">
                        <label for="radio3"><span class="metodoPago__texto">TARJETA DE CREDITO/ DEBITO</span></label>
                        </div>
                    </li>

                    <li>
                        <div class="radio">
                        <input type="radio" name="radio1" id="radio4" value="option4">
                        <label for="radio4"><span class="metodoPago__texto">PAYPAL</span></label>
                        </div>
                    </li>
                    <li>
                        <a href="#" class="btn">COMPRAR</a> </div>
                    </li>

                </ul>
               
            </div>


        </div>

    </div>
  <%- include('./layout/footer') %>
</body>
</html>