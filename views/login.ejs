<!DOCTYPE html>
<html lang="es">
    <%- include('./layout/head') %>
<body>
        <%- include('./layout/header') %>
<section class="form-login">
    <form id="frm" method="post">
        <h1>Login</h1>
        <% if (locals.errorLogin && errorLogin) { %>
            <div class="text-danger">
                <%= errorLogin %>
            </div>
        <% } %>
        <div class="row">
            <span><i class="fas fa fa-user"></i></span>
            <input type="text" 
            name="email" 
            placeholder="E-mail"
            value="<%= locals.oldData ? oldData.email : null %>" />
        </div>
        <% if (locals.errors && errors.email) { %>
            <div class="row text-danger">
                <%= errors.email.msg %>
            </div>
        <% } %>
        <div class="row">
            <span><i class="fas fa fa-lock"></i></span>
            <input type="password" 
            name="password" 
            placeholder="ContraseÃ±a"
            value="<%= locals.oldData ? oldData.password : null %>" />
            
            
        </div>
        <% if (locals.errors && errors.password) { %>
            <div class="row text-danger">
                <%= errors.password.msg %>
            </div>
        <% } %>
        <div class="row">
            <input type="submit" value="Ingresar"/>
        </div>
        <div class="row forgot-password">
            <a href="/register">Registrarse</a>
        </div>
    </form>
</section>

<%- include('./layout/head') %>
</body>
</html>