          <i class="far fa-arrow-alt-circle-right"></i>
          <li><a href="/login">LOGIN</a></li>
        </ol>
      </div>
    </div>
  </section> <!-- Termina SECTION BANNER-->

  <section class="homeproducts">
    <div class="homeproducts__container">
        
        <% if(products) { %> 
            
            
                <% products.forEach(function(product) { %>
                
                    <article class="homeproducts__products">
                        <div class="products__img">
                            <img src="<%= product.picture %>" alt="HomeProducto1">
                        </div>
                        <div class="products__info">
                            <span class="price"><%= product.price%></span>
                            <h4><%= product.title %></h4>
                            <p> <%= product.description %></p>
                            <a href="/product"><button><span class="button__text">SHOP NOW</span></button></a>
                        </div>
                    </article>
        
                <% }); %> 
            
        
            <% } %>
        
        
