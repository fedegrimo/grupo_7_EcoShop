    </div>

    <div class="contenedor-items">

        <% if(item) { %>    
            <% item.forEach(function(item) { %>
            
                <div class="item"> 
                    <div class="item-img"> 
                        <img class="img-1" src="<%= item.picture %>" alt="">
                    </div>
                         <!-- Item Name -->
                    <div class="item-name"> 
                        <a href="#."><%= item.title %></a>
                        <p><%= item.description %></p>
                    </div>
                        <!-- Price --> 
                    <span class="price"><%= item.price %></span>
                </div>
    
            <% }); %> 
        
    
        <% } %>
        
    </div> <!-- contenedor-items -->

</section> <!-- TERMINA SECTION recomendacion-->

